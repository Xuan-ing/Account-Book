<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_daily_weekly_monthly"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/daily_myBudget"
            android:textSize="20sp"
            android:textColor="#000000"
            android:id="@+id/daily_myBudget">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00   "
            android:gravity="end"
            android:textSize="20sp"
            android:textColor="#000000"
            android:id="@+id/daily_myBudget_amount">
        </TextView>

        <Button
            android:id="@+id/daily_myBudget_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/daily_myBudget_change">
        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="@string/searchHint"
            android:id="@+id/searchText"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/searchButton"
            android:id="@+id/searchButton"
            />
    </LinearLayout>


    <com.bin.david.form.core.SmartTable
        android:id="@+id/daily_table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </com.bin.david.form.core.SmartTable>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="bottom">

        <ImageButton
            android:id="@+id/imageExpend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#00FFFFFF"
            android:src="@drawable/expend">
        </ImageButton>

        <ImageButton
            android:id="@+id/imageIncome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#00FFFFFF"
            android:src="@drawable/income">
        </ImageButton>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/delete"
            android:layout_gravity="right"
            android:text="@string/deleteButton">
        </Button>
    </LinearLayout>
</LinearLayout>